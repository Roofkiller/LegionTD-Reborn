				</Panel>
				<Panel hittest="false" id='FoodIconPanel'>
					<Image id="FoodIcon" src="file://{images}/custom_game/chicken_leg.psd" onmouseover="UIShowTextTooltip(#Food)" onmouseout="UIHideTextTooltip()"/>
				</Panel>
				<Panel hittest="false" id='FoodLabelPanel'>
